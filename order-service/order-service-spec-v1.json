{
  "openapi": "3.1.0",
  "info": {
    "title": "Order Service [LOCAL]",
    "description": "",
    "license": {
      "name": "Prasanta Bhuyan Corp",
      "identifier": "License identifier"
    },
    "version": "0.0.1-SNAPSHOT"
  },
  "servers": [
    {
      "url": "http://localhost:4080",
      "description": "Generated server url"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/order": {
      "put": {
        "tags": [
          "Order Service"
        ],
        "summary": "Update Order",
        "description": "Update an order.",
        "operationId": "updateOrder",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Order"
              }
            }
          },
          "required": true
        },
        "responses": {
          "404": {
            "description": "Order not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "500": {
            "description": "Unable to update order.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "204": {
            "description": "No Content"
          }
        }
      },
      "post": {
        "tags": [
          "Order Service"
        ],
        "summary": "Create Order",
        "description": "Creates an order and returns order id.",
        "operationId": "createOrder",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrderRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Invalid request.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "500": {
            "description": "Unable to create order.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          }
        }
      }
    },
    "/api/order/{orderId}": {
      "get": {
        "tags": [
          "Order Service"
        ],
        "summary": "Get Order By Id",
        "description": "Update an order.",
        "operationId": "getOrder",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Order not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "500": {
            "description": "Unable to fetch order.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "bhuyanp",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "example": "Prasanta Bhuyan",
            "minLength": 1
          },
          "email": {
            "type": "string",
            "example": "pbhuyan@gmail.com",
            "minLength": 1
          }
        },
        "required": [
          "email",
          "id",
          "name"
        ]
      },
      "Order": {
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "format": "uuid",
            "minLength": 1
          },
          "customer": {
            "$ref": "#/components/schemas/Customer"
          },
          "orderItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            },
            "minItems": 1
          },
          "payment": {
            "$ref": "#/components/schemas/Payment"
          },
          "orderPlaced": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "customer",
          "orderId",
          "orderItems",
          "orderPlaced",
          "payment"
        ]
      },
      "OrderItem": {
        "type": "object",
        "properties": {
          "product": {
            "$ref": "#/components/schemas/Product"
          },
          "quantity": {
            "type": "integer",
            "format": "int32",
            "example": 2
          }
        },
        "required": [
          "product",
          "quantity"
        ]
      },
      "Payment": {
        "type": "object",
        "properties": {
          "nameOnTheCard": {
            "type": "string",
            "example": "Prasanta Bhuyan",
            "minLength": 1
          },
          "creditCardNumber": {
            "type": "string",
            "example": 1234234534564567
          },
          "expiryMonth": {
            "type": "integer",
            "format": "int32",
            "example": 1,
            "maximum": 12,
            "minimum": 1
          },
          "expiryYear": {
            "type": "integer",
            "format": "int32",
            "example": 2026,
            "minimum": 2025
          },
          "ccv": {
            "type": "integer",
            "format": "int32",
            "example": 999,
            "maximum": 999,
            "minimum": 99
          }
        },
        "required": [
          "nameOnTheCard"
        ]
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "Product A",
            "minLength": 1
          }
        },
        "required": [
          "id"
        ]
      },
      "ProblemDetail": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "format": "uri"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "detail": {
            "type": "string"
          },
          "instance": {
            "type": "string",
            "format": "uri"
          },
          "properties": {
            "type": "object",
            "additionalProperties": {}
          }
        }
      },
      "CreateOrderRequest": {
        "type": "object",
        "properties": {
          "customer": {
            "$ref": "#/components/schemas/Customer"
          },
          "orderItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            },
            "minItems": 1
          },
          "payment": {
            "$ref": "#/components/schemas/Payment"
          }
        },
        "required": [
          "customer",
          "orderItems",
          "payment"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
