{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenAPI definition",
    "version": "v0"
  },
  "servers": [
    {
      "url": "http://localhost:5080",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/api/inventory": {
      "post": {
        "tags": [
          "Inventory Service"
        ],
        "summary": "Block inventory",
        "description": "Block the inventory for a given order.",
        "operationId": "blockInventory",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InventoryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Invalid request.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "500": {
            "description": "Unable to block the inventory.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InventoryResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/inventory/{orderId}": {
      "delete": {
        "tags": [
          "Inventory Service"
        ],
        "summary": "Release inventory hold",
        "description": "Releases the blocked inventory back into the pool.",
        "operationId": "releaseInventory",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Order id missing.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "500": {
            "description": "Unable to release the inventory.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "204": {
            "description": "No Content"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BlockItem": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "minLength": 1
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        },
        "required": [
          "productId",
          "quantity"
        ]
      },
      "InventoryRequest": {
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "format": "uuid"
          },
          "blockItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BlockItem"
            },
            "minItems": 1
          }
        },
        "required": [
          "blockItems",
          "orderId"
        ]
      },
      "ProblemDetail": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "format": "uri"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "detail": {
            "type": "string"
          },
          "instance": {
            "type": "string",
            "format": "uri"
          },
          "properties": {
            "type": "object",
            "additionalProperties": {}
          }
        }
      },
      "InventoryResponse": {
        "type": "object",
        "properties": {
          "inventoryRefId": {
            "type": "string",
            "format": "uuid",
            "minLength": 1
          }
        },
        "required": [
          "inventoryRefId"
        ]
      }
    }
  }
